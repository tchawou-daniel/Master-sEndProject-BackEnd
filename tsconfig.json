{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@api/*": [
        "apps/api/src/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
